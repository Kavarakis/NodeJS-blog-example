{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "angular"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "plugins": [
    "angular"
  ],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "angular": true,
    "Promise":true
  },
  "rules": {
    "no-console": 1,
    "no-unused-vars": 1,
    "semi": [1, "always"],
    "angular/di": [0],
    "angular/json-functions": [0],
    "angular/log": [0],
    "angular/controller-as": [0]
  }
}